    "id": "#conditional",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "$or": {
            "description": "Match any",
            "type": "array",
            "minItems": 2,
            "items": {
                "$ref": "if.json#/definitions/if"
            }
        },
        "$any": {
            "description": "Match any of these conditions.",
            "$ref": "#/properties/$or"
        },
        "$and": {
            "description": "Match all of these conditions.",
            "$ref": "#/properties/$or"
        },
        "$all": {
            "description": "Match all of these conditions.",
            "$ref": "#/properties/$and"
        },
        "$not": {
            "description": "Charge the evaluation from true to false vice versa",
            "$ref": "if.json#/definitions/if"
        },
        "$path-empty": {
            "type": "object",
            "properties": {
                "path1": {
                    "type": "string"
                }
            },
            "required": [
                "path1"
            ],
            "additionalProperties": false
        },
        "$path-check-path": {
            "type": "object",
            "properties": {
                "conditional": {
                    "enum": [
                        "$greaterThan",
                        "$lessThan",
                        "$equalTo",
                        "$notEqualTo",
                        "$greaterThanOrEqualTo",
                        "$lessThanOrEqualTo",
                        "$in",
                        "$notIn",
                        "$contains"
                    ]
                },
                "path1": {
                    "type": "string"
                },
                "path2": {
                    "type": "string"
                }
            },
            "required": [
                "conditional",
                "path1",
                "path2"
            ],
            "additionalProperties": false
        },
        "$path-check-value": {
            "type": "object",
            "properties": {
                "conditional": {
                    "enum": [
                        "$greaterThan",
                        "$lessThan",
                        "$equalTo",
                        "$notEqualTo",
                        "$greaterThanOrEqualTo",
                        "$lessThanOrEqualTo",
                        "$in",
                        "$notIn",
                        "$contains"
                    ]
                },
                "path1": {
                    "type": "string"
                },
                "value2": {
                    "type": "string"
                }
            },
            "required": [
                "conditional",
                "path1",
                "value2"
            ],
            "additionalProperties": false
        },
        "$path-check-values": {
            "type": "object",
            "properties": {
                "conditional": {
                    "enum": [
                        "$greaterThan",
                        "$lessThan",
                        "$equalTo",
                        "$notEqualTo",
                        "$greaterThanOrEqualTo",
                        "$lessThanOrEqualTo",
                        "$in",
                        "$notIn",
                        "$contains"
                    ]
                },
                "path1": {
                    "type": "string"
                },
                "values2": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                }
            },
            "required": [
                "conditional",
                "path1",
                "values2"
            ],
            "additionalProperties": false
        },
        "$path-regex": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "regex": {
                    "type": "string",
                    "format": "regex"
                },
                "case_insensitive": {
                    "type": "boolean"
                },
                "multiline": {
                    "type": "boolean"
                },
                "extended": {
                    "type": "boolean"
                },
                "dotall": {
                    "type": "boolean"
                }
            },
            "required": [
                "path",
                "regex"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}