  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "id": "operation",
  "properties": {
    "bindings": {
      "type": "object",
      "properties": {
        "in": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "column": {
                "type": "string"
              },
              "path": {
                "type": "string"
              }
            },
          "required": [
          ],
          "additionalProperties": false
          }
        },
        "out": {
          "$ref": "#/properties/bindings/in"
        }
      }
    },
    "expressions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [{
          "type": "object",
          "id": "statement",
          "properties": {
            "datasource": {
              "type": "string",
              "id": "datasource"
            },
            "sql": {
              "type": "string",
              "id": "sql"
            },
            "type": {
              "id": "type",
              "enum": ["select", "insert", "update", "delete", "call"]
            }
          }
        }, {
          "type": "object",
          "properties": {
            "if": {
              "$ref": "if.json#"
            },
            "then": {
              "oneOf": [{
                "$ref": "#/properties/expressions"
              }, {
                "enum": ["$fail", "$continue", "$break"]
              }]
            },
            "elseIf": {
              "type": "array",
              "items": {
                "allOf": [{
                  "$ref": "if.json#"
                }, {
                  "oneOf": [{
                    "$ref": "#/properties/expressions"
                  }, {
                    "enum": ["$fail", "$continue", "$break"]
                  }]
                }]
              }
            },
            "else": {
              "oneOf": [{
                "$ref": "#/properties/expressions"
              }, {
                "enum": ["$fail", "$continue", "$break"]
              }]
            }
          }
        }, {
          "type": "object",
          "properties": {
            "$foreach": {
              "properties": {
                "iterateOverPath": {
                  "type": "string"
                },
                "expressions": {
                  "$ref": "#/properties/expressions"
                }
              }
            }
          }
        }, {
          "type": "object",
          "properties": {
            "$foreach": {
              "properties": {
                "loopTimes": {
                  "type": "number"
                },
                "loopVariable": {
                  "type": "string"
                },
                "expressions": {
                  "$ref": "#/properties/expressions"
                }
              }
            }
          }
        }]
      }
    }
  },
  "required": [
    "bindings",
    "expressions"
  ],
  "additionalProperties": false
}