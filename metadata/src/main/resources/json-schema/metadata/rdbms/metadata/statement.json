    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "statements": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type" : [
                    {
                        "type": "object",
                        "properties": {
                            "sql": {
                                "type": "string"
                            },
                            "iterateOverRows" : {
                                "type": "boolean"
                            },
                            "type": {
                               "enum":  [ "select", "insert", "update", "delete" ]
                            },
                            "datasource" : {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "properties": {
                            "if": {
                                "$ref": "if.json#"
                            },
                            "then": {
                                "type" : [
                                    {
                                        "$ref": "statement.json#"
                                    },
                                    {
                                        "enum": [ "$fail", "$continue", "$break" ]
                                    }
                                ]
                            },
                            "elseIf": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "if": {
                                            "$ref": "if.json#"
                                        },
                                        "then": {
                                            "type" : [
                                                {
                                                    "$ref": "statement.json#"
                                                },
                                                {
                                                    "enum": [ "$fail", "$continue", "$break" ]
                                                }
                                            ]
                                        }
                                    }
                                }
                            },
                            "else": {
                                "type" : [
                                    {
                                        "$ref": "statement.json#"
                                    },
                                    {
                                        "enum": [ "$fail", "$continue", "$break" ]
                                    }
                                ]
                            }
                        }
                    }
                ]
            }
        },
        "bindings": {
            "type": "object",
            "properties": {
                "in": {
                    "type": "array",
                    "items": {
                        "$ref": "inout.json#"
                    },
                },
                "out": {
                     "type": "array",
                     "items": {
                         "$ref": "inout.json#"
                     },
                 }
            }
        }
    },
    "additionalProperties": false
}
