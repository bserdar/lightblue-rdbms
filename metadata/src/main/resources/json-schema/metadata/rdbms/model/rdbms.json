    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "id": "rdbms",
    "properties": {
        "delete": {
            "$ref": "operation.json#",
            "id": "delete"
        },
        "fetch": {
            "$ref": "operation.json#",
            "id": "fetch"
        },
        "insert": {
            "$ref": "operation.json#",
            "id": "insert"
        },
        "save": {
            "$ref": "operation.json#",
            "id": "save"
        },
        "update": {
            "$ref": "operation.json#",
            "id": "update"
        },
        "SQLMapping": {
            "type": "object",
            "properties": {
                "joins" : {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "properties": {
                            "tables" : {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name" : {
                                            "type": "string"
                                        },
                                        "alias" : {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "name"
                                    ],
                                    "additionalProperties": false
                                }
                            },
                            "joinTablesStatement" : {
                                "type": "string"
                            },
                            "projectionMappings" : {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "column": {
                                            "type": "string"
                                        },
                                        "field" : {
                                            "type": "string"
                                        },
                                        "sort" : {
                                            "type": "string"
                                        },
                                        "required": [
                                            "column",
                                            "field"
                                        ],
                                        "additionalProperties": false
                                    }
                                }
                            }
                        },
                        "required": [
                            "tables",
                            "projectionMappings"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "joins"
            ],
            "additionalProperties": false
        },
        "dialoect" : {
            "type": "string"
        }
    },
    "anyOf": [
    {
        "required": [
            "delete"
        ],
        "required": [
            "insert"
        ],
        "required": [
            "save"
        ],
        "required": [
            "update"
        ]
    }],
    "required": [
        "SQLMapping",
        "dialect"
    ],
    "additionalProperties": false
}